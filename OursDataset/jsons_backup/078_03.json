      "poly": [
        222.5000000000001,
        1962.5,
        1257.5,
        1962.5,
        1257.5,
        2197.5,
        222.5000000000001,
        2197.5
      ],
      "ignore": false,
      "order": 18,
      "anno_id": 1,
      "text": " where  $U_i$  is the asymptotic value in the infinite past,  $U_f$  is the minimum value and  $\\mathcal{E}$  is a constant energy scale parametrizing the width of the well. The form of the potential is shown in Figure 2 for generic values of the parameters.",
      "line_with_spans": [
        {
          "category_type": "text_span",
          "poly": [
            222.5000000000001,
            1962.5,
            1257.5,
            1962.5,
            1257.5,
            2197.5,
            222.5000000000001,
            2197.5
          ],
          "text": ""
        }
