            "order": 8,
            "anno_id": 1,
            "text": " for  $r \\in \\mathbb{N}$  ([\\[Bur11, Theorem 6.6\\]](#page-11-1)). Then",
            "line_with_spans": [
                {
                    "category_type": "text_span",
                    "poly": [
