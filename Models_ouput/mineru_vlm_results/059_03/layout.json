                                    "bbox": [
                                        1272,
                                        2325,
                                        2190,
                                        2830
                                    ],
                                    "type": "inline_equation",
                                    "content": "H^{i} = \\{h_{1}^{i},h_{2}^{i},\\dots ,h_{n_{i}}^{i}\\}"
                                },
