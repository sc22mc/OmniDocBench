                                {
                                    "bbox": [
                                        374,
                                        1382,
                                        2118,
                                        2059
                                    ],
                                    "type": "text",
                                    "content": " into several parts "
                                },
                                {
                                    "bbox": [
                                        374,
                                        1382,
                                        2118,
                                        2059
                                    ],
                                    "type": "inline_equation",
                                    "content": "t = :t_0< t_1< \\ldots \\leq t_n = T"
                                },
                                {
                                    "bbox": [
                                        374,
                                        1382,
                                        2118,
                                        2059
                                    ],
                                    "type": "text",
                                    "content": ", where the "
                                },
                                {
                                    "bbox": [
                                        374,
                                        1382,
                                        2118,
                                        2059
                                    ],
                                    "type": "inline_equation",
                                    "content": "t_i"
                                },
                                {
                                    "bbox": [
                                        374,
                                        1382,
                                        2118,
                                        2059
                                    ],
                                    "type": "text",
                                    "content": " include all transaction dates of the portfolio, i.e. all dates at which an asset is either sold or bought. Then finally, we obtain the decomposition"
                                }
                            ]
                        }
